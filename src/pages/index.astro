	<script>
		// Effet parallaxe sur les images
		function initParallax() {
			const parallaxElements = document.querySelectorAll('.parallax-img');

			function updateParallax() {
				parallaxElements.forEach((element) => {
					const parent = element.parentElement;
					if (!parent) return;

					const rect = parent.getBoundingClientRect();
					const scrolled = window.pageYOffset;
					const parentTop = rect.top + scrolled;
					const parentHeight = parent.offsetHeight;

					// Calculer si l'√©l√©ment est visible
					if (rect.bottom > 0 && rect.top < window.innerHeight) {
						// Calculer le d√©placement (plus lent que le scroll)
						// Effet plus l√©ger pour la section satisfaction
						const intensity = parent.id === 'satisfaction-parallax' ? 0.15 : 0.2;
						const yPos = -(scrolled - parentTop) * intensity;
						element.style.transform = `translateY(${yPos}px)`;
					}
				});
			}

			// Mettre √† jour au scroll
			window.addEventListener('scroll', updateParallax, { passive: true });

			// Mettre √† jour au chargement
			updateParallax();
		}

		// Initialiser quand le DOM est pr√™t
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initParallax);
		} else {
			initParallax();
		}
	</script>
