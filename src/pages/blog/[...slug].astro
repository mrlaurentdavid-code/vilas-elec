---
// Page dynamique pour afficher un article de blog
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Génération statique de toutes les pages d'articles
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Formatage de la date en français
const dateOptions: Intl.DateTimeFormatOptions = {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
};
const formattedDate = new Date(entry.data.date).toLocaleDateString('fr-FR', dateOptions);
---

<Layout
  title={entry.data.title}
  description={entry.data.excerpt}
  keywords={entry.data.keywords?.join(', ') || `${entry.data.category}, électricien Saint-Vit, VILAS ELEC`}
>
  <!-- Article -->
  <article class="bg-gray-50">
    <!-- Header avec breadcrumb -->
    <div class="bg-white border-b pt-24 pb-8">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <nav class="flex items-center text-sm text-gray-500 mb-6" data-aos="fade-up">
          <a href="/" class="hover:text-blue-600 transition-colors">Accueil</a>
          <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a>
          <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-gray-700 font-medium">Article</span>
        </nav>

        <!-- Catégorie -->
        <div class="mb-4" data-aos="fade-up" data-aos-delay="100">
          <span class="inline-block bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-bold">
            {entry.data.category}
          </span>
        </div>

        <!-- Titre -->
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight" data-aos="fade-up" data-aos-delay="200">
          {entry.data.title}
        </h1>

        <!-- Meta informations -->
        <div class="flex flex-wrap items-center gap-6 text-gray-600" data-aos="fade-up" data-aos-delay="300">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span class="font-medium">{entry.data.author}</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={entry.data.date.toString()}>{formattedDate}</time>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{entry.data.readTime}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Image de couverture -->
    <div class="relative h-96 md:h-[500px] bg-gray-900 overflow-hidden" data-aos="fade-in">
      <img
        src={entry.data.image}
        alt={entry.data.title}
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Contenu de l'article -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <!-- Encart introduction -->
      <div class="bg-blue-50 border-l-4 border-blue-600 p-6 mb-12 rounded-r-lg" data-aos="fade-up">
        <p class="text-lg text-gray-700 leading-relaxed font-medium">
          {entry.data.excerpt}
        </p>
      </div>

      <!-- Contenu Markdown avec style amélioré -->
      <div class="article-content bg-white p-8 md:p-12 rounded-2xl shadow-lg" data-aos="fade-up" data-aos-delay="100">
        <Content />
      </div>

      <!-- Mots-clés SEO -->
      {entry.data.keywords && entry.data.keywords.length > 0 && (
        <div class="mt-12 bg-white p-8 rounded-2xl shadow-lg" data-aos="fade-up">
          <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            Mots-clés
          </h3>
          <div class="flex flex-wrap gap-2">
            {entry.data.keywords.map((keyword: string) => (
              <span class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-medium">
                #{keyword}
              </span>
            ))}
          </div>
        </div>
      )}

      <!-- Boutons de partage social -->
      <div class="mt-12 bg-white p-8 rounded-2xl shadow-lg" data-aos="fade-up">
        <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
          <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
          </svg>
          Partager cet article
        </h3>
        <div class="flex flex-wrap gap-4">
          <a
            href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-[#1877F2] text-white rounded-lg hover:bg-[#145dbf] transition-colors font-medium shadow-md hover:shadow-lg"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Facebook
          </a>
          <a
            href={`https://twitter.com/intent/tweet?url=${Astro.url}&text=${encodeURIComponent(entry.data.title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-[#1DA1F2] text-white rounded-lg hover:bg-[#1a8cd8] transition-colors font-medium shadow-md hover:shadow-lg"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
            Twitter
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-[#0A66C2] text-white rounded-lg hover:bg-[#004182] transition-colors font-medium shadow-md hover:shadow-lg"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-gradient-to-br from-blue-600 to-blue-800 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl p-8 md:p-12 text-center shadow-2xl" data-aos="zoom-in">
          <div class="inline-block bg-blue-100 p-4 rounded-full mb-6">
            <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-800">
            Un projet électrique à Saint-Vit ou dans le Doubs ?
          </h2>
          <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
            Contactez VILAS ELEC pour un devis gratuit et personnalisé. Intervention rapide dans toute la région.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contact"
              class="inline-flex items-center justify-center bg-blue-600 text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-blue-700 transition-all duration-300 shadow-lg hover:scale-105 transform"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Demander un devis
            </a>
            <a
              href="tel:+33664825552"
              class="inline-flex items-center justify-center bg-yellow-400 text-gray-900 px-8 py-4 rounded-lg font-bold text-lg hover:bg-yellow-500 transition-all duration-300 shadow-lg hover:scale-105 transform"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              06 64 82 55 52
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Retour au blog -->
    <div class="bg-gray-50 py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <a
          href="/blog"
          class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-800 transition-colors text-lg group"
        >
          <svg class="w-6 h-6 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Retour aux articles
        </a>
      </div>
    </div>
  </article>
</Layout>

<style>
  /* Style amélioré pour le contenu Markdown */
  .article-content {
    font-size: 1.125rem;
    line-height: 2;
    color: #374151;
  }

  .article-content :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    margin-top: 4rem;
    margin-bottom: 2rem;
    color: #1f2937;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid #3b82f6;
  }

  .article-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    color: #374151;
  }

  .article-content :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #4b5563;
  }

  .article-content :global(p) {
    margin-bottom: 2rem;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 2rem;
    margin-top: 1rem;
    padding-left: 2rem;
  }

  .article-content :global(li) {
    margin-bottom: 1rem;
    line-height: 1.8;
  }

  .article-content :global(ul li) {
    list-style-type: disc;
  }

  .article-content :global(ol li) {
    list-style-type: decimal;
  }

  .article-content :global(strong) {
    font-weight: 700;
    color: #1f2937;
  }

  .article-content :global(a) {
    color: #2563eb;
    text-decoration: underline;
    font-weight: 500;
    transition: color 0.2s;
  }

  .article-content :global(a:hover) {
    color: #1d4ed8;
  }

  .article-content :global(img) {
    border-radius: 1rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .article-content :global(blockquote) {
    border-left: 4px solid #3b82f6;
    padding-left: 1.5rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    font-style: italic;
    color: #4b5563;
    margin: 2rem 0;
    background: #eff6ff;
    border-radius: 0 0.5rem 0.5rem 0;
  }

  .article-content :global(code) {
    background-color: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.9em;
    color: #1f2937;
    font-family: 'Courier New', monospace;
  }

  .article-content :global(pre) {
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .article-content :global(pre code) {
    background-color: transparent;
    color: inherit;
    padding: 0;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .article-content :global(th) {
    background: #3b82f6;
    color: white;
    font-weight: 600;
    padding: 1rem;
    text-align: left;
  }

  .article-content :global(td) {
    padding: 1rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .article-content :global(tr:hover) {
    background: #f9fafb;
  }
</style>
